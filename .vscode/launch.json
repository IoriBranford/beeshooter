    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}", "--debug"]
        },
        {
            "name": "Debug Android",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}", "--debug", "--os", "Android"]
        },
        {
            "name": "Debug test content",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}", "--startpoint", "teststart"]
        },
        {
            "name": "Debug start at...",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}", "--startpoint", "${input:startpoint}"],
            
        },
    ],
    "inputs": [
        {
            "id": "startpoint",
            "type": "promptString",
            "description": "Name of the spawn to start at"
        }
    ]
}