    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}/game", "--debug"]
        },
        {
            "name": "Debug Android",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}/game", "--debug", "--os", "Android"]
        },
        {
            "name": "Debug test content",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}/game", "--startpoint", "teststart"]
        },
        {
            "name": "Debug start at...",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "love"
            },
            "args": ["${workspaceFolder}/game", "--startpoint", "${input:startpoint}"],
        },
        {
            "name": "Debug Genesis",
            "request": "launch",
            "type": "cppdbg",
            "program": "${workspaceRoot}\\genesis\\out\\rom.out",
            "miDebuggerServerAddress": "localhost:1234", // BlastEm debug port
            "sourceFileMap": {
                "d:\\apps\\sgdk\\src\\": "${env:GDK}\\src\\",
            },
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/genesis",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "launchCompleteCommand": "exec-continue",
            "miDebuggerPath": "${env:GDK}\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "text": "set directories '${workspaceFolder};$cwd;$cdir'"
                }
            ],
            "preLaunchTask": "Build and start debug server"
        },
        {
            "name": "Run Genesis",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${config:gens.path}",
            "args": ["rom.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}${pathSeparator}genesis${pathSeparator}out",
            "environment": []
        }
    ],
    "inputs": [
        {
            "id": "startpoint",
            "type": "promptString",
            "description": "Name of the spawn to start at"
        }
    ]
}